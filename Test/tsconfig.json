{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "rootDir": "./webapp",
    "baseUrl": "./",
    "sourceMap": true,
    "paths": {
      "my/projects/test/*": ["./webapp/*"],
      "my/libraries/lib1/*": ["./node_modules/my.libraries.lib1/src/my/libraries/lib1/*"],
      "unit/*": ["./webapp/test/unit/*"],
      "integration/*": ["./webapp/test/integration/*"]
    }
  },
  "include": ["./webapp/**/*.ts"]
}
